<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"><![CDATA[

    TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />















    ]]>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout"
        android:layout_marginBottom="50dp">

        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextR1Label"
            android:layout_row="0"
            android:layout_column="0" />

        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextR2Label"
            android:layout_row="0"
            android:layout_column="21" />

        <ToggleButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/buttonR1"
            android:layout_row="1"
            android:layout_column="0" />

        <ToggleButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/buttonR2"
            android:layout_row="1"
            android:layout_column="21" />

        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextR3Label"
            android:layout_row="2"
            android:layout_column="0" />

        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextR4Label"
            android:layout_row="2"
            android:layout_column="21" />

        <ToggleButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/buttonR3"
            android:layout_row="3"
            android:layout_column="0" />

        <ToggleButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/buttonR4"
            android:layout_row="3"
            android:layout_column="21" />

        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextR5Label"
            android:layout_row="4"
            android:layout_column="0" />

        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextR6Label"
            android:layout_row="4"
            android:layout_column="21" />

        <ToggleButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/buttonR5"
            android:layout_row="5"
            android:layout_column="0" />

        <ToggleButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/buttonR6"
            android:layout_row="5"
            android:layout_column="21" />

        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextR7Label"
            android:layout_row="6"
            android:layout_column="0" />

        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextR8Label"
            android:layout_row="6"
            android:layout_column="21" />

        <ToggleButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/buttonR7"
            android:layout_row="7"
            android:layout_column="0" />

        <ToggleButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/buttonR8"
            android:layout_row="7"
            android:layout_column="21" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/IPAddress"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ipEdit"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_toLeftOf="@+id/ConnectButton"
        android:layout_toStartOf="@+id/ConnectButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Connect"
        android:id="@+id/ConnectButton"
        android:layout_alignBottom="@+id/ipEdit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/EditLabels"
        android:id="@+id/buttonChange"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
